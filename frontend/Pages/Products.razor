@page "/products"
@using MudBlazor

<MudGrid>
        <MudItem xs="12" md="6">
            <MudTextField T="string" Label="Search products..." Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" md="6" Class="text-end">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add">
                New Product
            </MudButton>
        </MudItem>
    </MudGrid>
    
    <MudTable Items="@products" Hover="true" Dense="true">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Category</MudTh>
            <MudTh>Price</MudTh>
            <MudTh>Stock</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Category</MudTd>
            <MudTd>@context.Price.ToString("C")</MudTd>
            <MudTd>@context.Stock</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Info" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" />
            </MudTd>
        </RowTemplate>
    </MudTable>

@code {
    private List<Product> products = new();

    protected override void OnInitialized()
    {
        products = new List<Product>
        {
            new Product { Name = "Laptop", Category = "Electronics", Price = 1200, Stock = 15 },
            new Product { Name = "Mouse", Category = "Accessories", Price = 25, Stock = 100 },
            new Product { Name = "Keyboard", Category = "Accessories", Price = 75, Stock = 50 }
        };
    }

    public class Product
    {
        public string Name { get; set; } = string.Empty;
        public string Category { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public int Stock { get; set; }
    }
}
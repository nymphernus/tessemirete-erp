@page "/profile"
@using MudBlazor

<MudGrid>
        <!-- Левая колонка - Аватар и основная информация -->
        <MudItem xs="12" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <div class="text-center">
                    <MudAvatar Size="Size.Large" Variant="Variant.Filled" Color="Color.Primary">
                        <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" />
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Class="mt-2">@name @surname</MudText>
                    <MudText Typo="Typo.body2" Class="mb-4">@role</MudText>
                    
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" Class="mb-2">
                        Изменить фото
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary">
                        Удалить фото
                    </MudButton>
                </div>
                
                <MudDivider Class="my-4" />
                
                <MudText Typo="Typo.subtitle2" Class="mb-2">Персональная информация</MudText>
                <MudText Typo="Typo.body2" Class="mb-1"><strong>Зарегистрирован:</strong> Июль 22, 2025</MudText>
                <MudText Typo="Typo.body2" Class="mb-1"><strong>Последний вход:</strong> Сегодня, 09:30 PM</MudText>
                <MudText Typo="Typo.body2"><strong>Статус:</strong> 
                    <MudChip T="string" Color="Color.Success" Variant="Variant.Filled" Size="Size.Small">
                        Онлайн
                    </MudChip>
                </MudText>
            </MudPaper>
        </MudItem>
        
        <!-- Правая колонка - Формы и настройки -->
        <MudItem xs="12" md="8">
            <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true">
                <MudTabPanel Text="Персональные данные">
                    <MudPaper Elevation="0" Class="pa-4">
                        <MudGrid>
                            <MudItem xs="12" md="6">
                                <MudTextField T="string" Label="First Name" @bind-Value="name" Variant="Variant.Outlined" FullWidth="true" />
                            </MudItem>
                            <MudItem xs="12" md="6">
                                <MudTextField T="string" Label="Last Name" @bind-Value="surname" Variant="Variant.Outlined" FullWidth="true" />
                            </MudItem>
                            <MudItem xs="12">
                                <MudTextField T="string" Label="Email" @bind-Value="email" Variant="Variant.Outlined" FullWidth="true" />
                            </MudItem>
                            <MudItem xs="12" md="6">
                                <MudTextField T="string" Label="Phone" @bind-Value="phone" Variant="Variant.Outlined" FullWidth="true" />
                            </MudItem>
                            <MudItem xs="12" md="6">
                                <MudTextField T="string" Label="Position" @bind-Value="role" Variant="Variant.Outlined" FullWidth="true" />
                            </MudItem>
                            <MudItem xs="12">
                                <MudTextField T="string" Label="Address" @bind-Value="address" Variant="Variant.Outlined" FullWidth="true" />
                            </MudItem>
                        </MudGrid>
                        
                        <div class="text-end mt-4">
                            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Class="mr-2">
                                Закрыть
                            </MudButton>
                            <MudButton Variant="Variant.Filled" Color="Color.Primary">
                                Сохранить изменения
                            </MudButton>
                        </div>
                    </MudPaper>
                </MudTabPanel>
                
                <MudTabPanel Text="Аккаунт">
                    <MudPaper Elevation="0" Class="pa-4">
                        <MudGrid>
                            <MudItem xs="12">
                                <MudTextField T="string" Label="Current Password" InputType="InputType.Password" Variant="Variant.Outlined" FullWidth="true" />
                            </MudItem>
                            <MudItem xs="12" md="6">
                                <MudTextField T="string" Label="New Password" InputType="InputType.Password" Variant="Variant.Outlined" FullWidth="true" />
                            </MudItem>
                            <MudItem xs="12" md="6">
                                <MudTextField T="string" Label="Confirm New Password" InputType="InputType.Password" Variant="Variant.Outlined" FullWidth="true" />
                            </MudItem>
                        </MudGrid>
                        
                        <div class="text-end mt-4">
                            <MudButton Variant="Variant.Filled" Color="Color.Primary">
                                Update Password
                            </MudButton>
                        </div>
                    </MudPaper>
                </MudTabPanel>
            </MudTabs>
        </MudItem>
    </MudGrid>

<style>
.mr-2 {
    margin-right: 1rem;
}
</style>

@code {
    private string address = "г. Ростов-на-Дону, ул. Гаккеля, д.10А, кв. 3";
    private string phone = "+7 (961) 411-37-18";
    private string email = "dethtaker@bk.ru";
    private string role = "Администратор";
    private string name = "Алексей";
    private string surname = "Рейнхард";
}
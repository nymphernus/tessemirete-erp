@using MudBlazor

<DialogContent Class="pa-5">
    <MudText Typo="Typo.h6" Class="mb-4">@ContentText</MudText>
</DialogContent>

<DialogActions Class="pa-4">
    <MudSpacer />
    <MudButton Variant="Variant.Text" OnClick="Cancel">Отмена</MudButton>
    <MudButton Variant="Variant.Filled" Color="@Color" OnClick="Submit">@ButtonText</MudButton>
</DialogActions>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string ContentText { get; set; } = "Вы уверены?";
    [Parameter] public string ButtonText  { get; set; } = "Удалить";
    [Parameter] public Color Color        { get; set; } = Color.Error;

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));
    private void Cancel() => MudDialog.Cancel();
}
